{
  "meta": {
    "name": "obsidian-nextcloud-media-tokens",
    "version": "1.0.0",
    "description": "Design tokens for Obsidian Nextcloud Media Plugin. Dark-mode first, technical, calm."
  },
  "theme": {
    "mode": "dark"
  },
  "color": {
    "background": {
      "primary": "#1e1e1e",
      "secondary": "#252525",
      "tertiary": "#2e2e2e",
      "modal": "#1a1a1a",
      "input": "#161616"
    },
    "text": {
      "normal": "#dcddde",
      "muted": "#999999",
      "faint": "#666666",
      "onAccent": "#ffffff",
      "interactive": "#7a63a8"
    },
    "border": {
      "subtle": "#333333",
      "strong": "#444444",
      "focus": "#7a63a8"
    },
    "brand": {
      "primary": "#7a63a8",
      "primaryHover": "#8a73b8",
      "secondary": "#5c5c5c",
      "accent": "#0082c9",
      "success": "#3d8b40",
      "warning": "#e0ac00",
      "error": "#d43d3d"
    }
  },
  "typography": {
    "family": {
      "ui": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
    },
    "size": {
      "xs": "11px",
      "sm": "12px",
      "base": "14px",
      "lg": "16px",
      "xl": "20px",
      "xxl": "24px"
    },
    "weight": {
      "regular": 400,
      "medium": 500,
      "bold": 600
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "loose": 1.75
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "xxl": "48px"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "pill": "9999px"
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.4)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.5)"
  },
  "opacity": {
    "disabled": 0.5,
    "hover": 0.8
  }
}
