# ============================================
# Obsidian Nextcloud Media - Infrastructure
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# === Database ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=obsidian_media
DATABASE_URL=postgresql://postgres:CHANGE_ME_SECURE_PASSWORD@postgres:5432/obsidian_media

# === Redis ===
REDIS_URL=redis://redis:6379

# === AI Gateway ===
GATEWAY_BEARER_TOKEN=CHANGE_ME_RANDOM_32_CHAR_TOKEN
# Choose your LLM provider (at least one required for production)
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GEMINI_API_KEY=...

# === n8n Workflow Automation ===
N8N_USER=admin
N8N_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# === GitHub Integration ===
# Personal Access Token with repo scope
GITHUB_TOKEN=ghp_...
GITHUB_OWNER=your-org
GITHUB_REPO=your-repo

# === Support Email ===
# Auto-reply sender address
SUPPORT_FROM_EMAIL=support@your-domain.com
# Enable automatic acknowledgment emails
SUPPORT_AUTOACK_ENABLED=false
# Signature name in auto-reply
PUBLIC_SUPPORT_NAME=Support Team

# === Logging ===
LOG_LEVEL=info
